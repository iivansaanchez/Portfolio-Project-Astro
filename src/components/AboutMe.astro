---
// AboutMe.astro
import Navbar from '../components/Navbar.astro'; // Asegúrate de que la ruta sea correcta
const { title, description, imageSrc, userImage } = Astro.props;
---

<section class="relative w-full h-screen bg-cover bg-center" style={`background-image: url(${imageSrc})`}>
  <!-- Inserta el Navbar aquí -->
  <Navbar />

  <!-- Fondo con filtro de desenfoque -->
  <div class="absolute inset-0 bg-opacity-40 backdrop-blur-md"></div>

  <div class="container mx-auto h-full flex flex-col md:flex-row items-center justify-between px-6 relative z-10 text-white">
    <!-- Título y descripción -->
    <div class="md:w-2/3 text-center md:text-left">
      <h1 class="text-5xl font-extrabold leading-tight mb-6 tracking-wide">
        {title.split(" ").map((word, index) => 
          index % 2 === 0 ? 
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-blue-500">{word} </span> : 
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-500">{word} </span>
        )}
      </h1>

      <p class="text-xl font-light leading-relaxed mb-8">
        {description.split(" ").map((word, index) => 
          index % 2 === 0 ? 
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-blue-500">{word} </span> : 
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-500">{word} </span>
        )}
      </p>
    </div>

    <!-- Imagen del usuario -->
    <div class="md:w-1/3 flex justify-center items-center">
      <div class="relative group">
        <div class="w-80 h-80 md:w-96 md:h-96 rounded-full overflow-hidden shadow-2xl transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6">
          <img src={userImage} alt="User Image" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </div>
</section>
