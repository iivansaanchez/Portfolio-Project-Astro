---
// Experience.astro
const { title, description, time, image } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <!-- Encabezado de la sección -->
  <div class="flex items-center justify-center gap-4 mb-12">
    <!-- Icono dentro de un círculo -->
    <div class="bg-purple-500 text-white w-12 h-12 flex items-center justify-center rounded-full shadow-lg">
      <svg class="w-6 h-6" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m2 0a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    </div>
    <h1 class="text-3xl font-extrabold text-gray-800">Work Experience</h1>
  </div>

  <!-- Contenedor de las tarjetas -->
  <div class="flex flex-col gap-8">
    <div class="relative flex items-center bg-white shadow-lg rounded-lg p-8 max-w-2xl mx-auto group transition-transform duration-300 hover:scale-105">
      <!-- Línea lateral -->
      <div class="absolute left-0 top-0 h-full w-2 bg-gradient-to-b from-purple-500 to-indigo-700"></div>

      <!-- Punto destacado -->
      <div class="w-8 h-8 bg-purple-600 rounded-full border-4 border-white shadow-md absolute -left-4 top-6"></div>

      <!-- Contenido principal -->
      <div class="flex flex-col md:flex-row items-center w-full">
        <!-- Imagen -->
        <div class="w-24 h-24 rounded-lg overflow-hidden shadow-md mr-8 flex-shrink-0">
          <img src={image} alt="Experience Image" class="w-full h-full object-cover" />
        </div>

        <!-- Información -->
        <div class="flex-grow">
          <h2 class="text-2xl font-bold text-gray-800 group-hover:text-purple-600 transition-colors duration-300">
            {title}
          </h2>
          <p class="text-lg text-gray-600 my-3 leading-relaxed">
            {description}
          </p>
          <p class="text-md text-gray-500 italic">
            {time}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
