---
// Skills.astro
const { skills } = Astro.props; // skills debe ser un array de objetos que contengan el título y la imagen
---

<section class="relative bg-cover bg-center" style="background-image: url('/img/FondoSkills.jpg');">
  <!-- Fondo con filtro -->
  <div class="absolute inset-0 bg-black opacity-50"></div>

  <!-- Contenedor de los iconos de las habilidades -->
  <div class="relative z-10 container mx-auto px-6 py-16">
    <!-- Título con ícono -->
    <div class="flex items-center justify-center gap-4 mb-12">
      <!-- Icono dentro de un círculo -->
      <div class="bg-purple-500 text-white w-12 h-12 flex items-center justify-center rounded-full shadow-lg">
        <svg class="w-6 h-6" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12l-4-4m0 8l4-4m0 0H4" />
        </svg>
      </div>
      <h2 class="text-4xl font-bold text-white">My Skills</h2>
    </div>

    <!-- Grid de iconos -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
      {skills.map((skill) => (
        <div class="flex justify-center items-center">
          <img src={skill.image} alt={skill.name} class="w-20 h-20 object-contain" />
        </div>
      ))}
    </div>
  </div>
</section>
