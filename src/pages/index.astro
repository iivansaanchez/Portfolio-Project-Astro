---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import AboutMe from '../components/AboutMe.astro';
import StudiesCard from '../components/StudiesCard.astro';
import WorkExp from '../components/WorkExp.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects';
import ContactForm from '../components/ContactForm';
import Footer from '../components/Footer';

const data = await import('../../app.json');


const aboutMe = {
  title: 'Welcome to My Portfolio',
  description: 'I am Iván Sánchez, a web developer with a passion for creating amazing websites.',
  imageSrc: '/img/Fondo.png', // Ruta de la imagen de fondo
  userImage: '/img/Perfil.webp',  
};
---

<Layout></Layout>
<section id="home">
<AboutMe title={aboutMe.title} description={aboutMe.description} imageSrc={aboutMe.imageSrc} userImage={aboutMe.userImage} />
</section>
    
<section id="studies" class="mt-16 text-center bg-gradient-to-b from-gray-50 via-white to-gray-50 py-12">
  <div class="max-w-5xl mx-auto px-4">
    <!-- Título de la sección -->
    <div class="flex items-center justify-center gap-4 mb-12">
      <div class="bg-purple-500 text-white w-12 h-12 flex items-center justify-center rounded-full shadow-lg">
        <svg class="w-6 h-6" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 12l8-4-8-4-8 4 8 4zm0 6l8-4m-8 4v-6m0 6l-8-4m8 4l8-4m-8-4V6" />
        </svg>
      </div>
      <h1 class="text-4xl font-extrabold text-gray-800">Education</h1>
    </div>

    <!-- Contenedor de las tarjetas -->
    <div class="flex flex-col gap-12">
      {data.studies.map((studies) => (
        <div 
          class={`w-full max-w-2xl mx-auto bg-white shadow-lg rounded-xl overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-2xl ${studies.className}`}
        >
          <!-- Contenido de la tarjeta -->
          <div class="flex flex-col md:flex-row items-center">
            <!-- Imagen -->
            <img 
              src={studies.image} 
              alt={studies.university} 
              class="w-full md:w-48 h-48 object-cover"
            />

            <!-- Información -->
            <div class="p-6 flex-grow text-left">
              <h2 class="text-2xl font-bold text-gray-800 mb-2">{studies.degree}</h2>
              <p class="text-lg font-semibold text-purple-500 mb-4">{studies.university}</p>
              <p class="text-base text-gray-600 leading-relaxed">{studies.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>



<section id="experience" class="space-y-8">
  {data.experiences.map((exp) => (
    <WorkExp
      title={exp.title} 
      description={exp.description} 
      time={exp.time} 
      image={exp.image} 
    />
  ))}
</section>

<br>
<section id="skills">
<Skills skills={data.skills} />
</section>
<br>
<section id="projects">
<Projects client:only="react" />
</section>
<br>

  <!-- Sección de Contacto -->
  <section id="contact" class="mt-16 text-center">
    <div class="flex flex-wrap justify-center gap-8">
      <ContactForm client:only="react" />
    </div>
  </section>

<br>

<Footer />


